<% if packages.present? %>
<table class="zebra">
<thead>
	<tr>
		<th><!-- Icon --></th>
		<th>Display Name<br/><em>Branch</em></th>
		<th><%= check_box_tag("selected_all", nil, false, :class => "select_all") %></th>
		<th>Version</th>
		<th>Update For</th>
		<th>Requires</th>
		<th>Actions</th>
	</tr>
</thead>
	<% package_branches.each do |package_branch| %>
		<%= render :partial => 'shared_package_table_row', :locals => {:packages => packages, :package_branch => package_branch, :unit => unit} %>
	<% end %>
</table>
<% else %>
<p><em>There are no shared packages from this unit.</em></p>
<% end %>