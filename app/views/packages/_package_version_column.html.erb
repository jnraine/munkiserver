<td>
	<%= check_box_tag("selected_records[]", pkg.id, false, :class => "#{pkg.package_category.name.downcase}_checkbox") %>
</td>
<td>
	<%= link_to "#{pkg.version}", package_path(pkg), :title => "Show" %>
</td>
<td>
	<%= link_to image_tag("edit.png", :class => "inline-icon", :title => "Edit"), edit_package_path(pkg) %>
	<%= link_to image_tag("download.png", :class => "inline-icon", :title => "Download"), download_package_path(pkg.download_name) %>
	<% if super_user? %>
		<%= link_to(image_tag("delete.png", :class => "inline-icon", :title => "Remove"), pkg, :confirm => "Are you sure you want to destroy #{pkg.to_s(:version)}?", :method => :delete, :title => "Remove") %>
	<% end -%> 
</td>