<h4><%= category_name.capitalize %></h4>
<table>
	<thead>
		<tr>
			<!-- <th> Checkbox</th> -->
			<th><!-- Icon --></th>
			<th>Display Name<br/><em>Branch</em></th>
			<th><%= check_box_tag("selected_#{category_name.downcase}", nil, false, :class => "select_all") %></th> 
			<th>Versions</th>
			<th>Actions</th>
			<th>
				Update
				<%= helpful_info("If a checkmark appears, there is a newer version of this package shared by another unit. Go to 'shared packages' to import.") %>
			</th>
		</tr>
	</thead>
	<% packages.each do |package| %>
		<%= render :partial => 'package_table_row', :locals => {:package => package} %>
	<% end -%>
</table>