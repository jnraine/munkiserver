<strong>Computers</strong>
<br />
<% if computers.present? %>
	<% computers.each do |c| %>
		<%= image_tag c.icon.url(:tiny) if c.icon %>
		<%= link_to c.name, computer_url(c.unit, c) %>
		<br />
	<% end %>
<% else %>
	<em>No Computer Affected</em>
<% end %>
<br />

<strong>Bundles</strong>
<br />
<% if bundles.present? %>
	<% bundles.each do |b| %>
		<%= link_to b.name, bundle_url(b.unit, b) %>
		<br />
	<% end %>
<% else %>
	<em>No Bundle Affected</em>
<% end %>
<br />

<strong>Computer Groups</strong>
<br />
<% if computer_groups.present? %>
	<% computer_groups.each do |cg| %>
		<%= link_to cg.name, computer_group_url(cg.unit, cg) %>
		<br />
	<% end %>
<% else %>
	<em>No Computer Groups Affected</em>
<% end %>