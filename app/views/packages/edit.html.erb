<% content_for :sidebar do %>
	<h4>Upgrade for</h4>
	<div class="box">
		If this package updates (adds to) another package, select the package branch that is updated.
	</div>
	
	<h4>Dependancies</h4>
	<div class="box">
		Select packages that must be present for this package to function properly.  Dependancies are version specific.
	</div>
	<h4>Create package variation</h4>
	<div class="box">
		Needs to be added.
	</div>
<% end -%>

<h2>Editing a package</h2>

<%= package_header(@package) %>

<p><em>Editing the name property will change the package branch of this package</em></p>

<%= form_for(@package, :url => package_path(@package.to_params) ,:html => {:multipart => true, "data-environment-change" => package_environment_change_url(@package.unit,@package.id)} ) do |f| %>
	<%= f.error_messages %>
	<%= render :partial => "edit_package_tabs", :locals => {:f => f} %>
	<p style="float:right;"><%= f.submit 'Update' %></p>
<% end %>
<%= link_to 'Show', package_path(@package.to_params) %>