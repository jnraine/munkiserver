<tr>
	<td rowspan="<%= package_branch.shared_packages_from_unit(unit).count %>">
	<%= image_tag(package_branch.shared_packages_from_unit(unit).first.icon.url(:small), :class => "thumbnail", "data-package-branch-id" => package_branch.id) if package_branch.shared_packages_from_unit(unit).first.icon %>
	</td>
	<td rowspan="<%= package_branch.shared_packages_from_unit(unit).count %>">
		<%= package_branch.display_name %><br />
		<em><%= package_branch.name %></em>
	</td>
	<%= render :partial => 'shared_package_version_column', :locals => {:package => package_branch.shared_packages_from_unit(unit).first} %>
	<td rowspan="<%= package_branch.shared_packages_from_unit(unit).count %>" class="centerize">
	
	</td>
</tr>
<% package_branch.shared_packages_from_unit(unit).each_with_index do |package,i| %>
	<% unless i == 0 %>
		<tr>
			<%= render :partial => 'shared_package_version_column', :locals => {:package => package} %>
		</tr>
	<% end %>
<% end %>