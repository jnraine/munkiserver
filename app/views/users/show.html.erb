<h2>User</h2>

<h3>Info</h3> 

<table class="form">
	<tr>
		<td>Username: <%= @user.username %></td>
	</tr>
	<tr>
		<td>Email: <%= @user.email %></td>
	</tr>
	<tr>
		<td>Receive Email Notification :<%= @user.settings.receive_email_notifications? ? "Yes" : "No" %></td>
	</tr>
</table>


<h3>Units</h3>

<% if @user.units.empty? %>
<table class="form">
	<tr>
		<td>This user has no access to any units.</td>
	</tr>
<% else %>
<ul>
	<% @user.assignments.each do |assignment| %>
	<tr>
		<td><li><%= "#{assignment.unit} - #{assignment.role}" %></li></td>
	<% end %>
	</tr>
</ul>
<% end %>
</table>

<%= link_to "Edit", edit_user_path(@user) %> | <%= link_to "Edit User Settings", settings_edit_user_path(@user.id) %> 
<% if can? :read, User %>| <%= link_to "Back", users_path %><% end %>