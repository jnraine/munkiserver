<h2>New computer group</h2>

<%= form_for(@computer_group, :validate => true) do |f| %>
	<%= f.error_messages %>
	<p>
		<%= f.text_field :name %>
		<%= subtle_value('computer_group',:name) %>
	</p>
	<p>
		<%= f.text_area :description, :size => "30x6" %>
		<%= subtle_value('computer_group', :description) %>
	</p>
	<p>Environment <%= f.collection_select :environment_id, Environment.all, :id, :name %></p>
	<p>
	<%= f.submit 'Create' %>
	</p>
<% end %>

<%= link_to 'Back', computer_groups_path(current_unit) %>