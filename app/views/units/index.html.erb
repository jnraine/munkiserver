<h2>Listing units</h2>

<table class="zebra">
	<thead>
		<th>Name</th>
		<th>Description</th>
		<th>Actions</th>
	<thead>

<% @units.each do |unit| %>
  <tr>
    <td><%= link_to unit.name, unit %></td>
	<td><%= unit.description %></td>
    <td>
		<%= link_to 'Edit', edit_unit_path(unit) %> 
		<%= link_to 'Remove', unit, :confirm => 'Are you sure?', :method => :delete %>
	</td>
  </tr>
<% end %>
</table>
<p><%= link_to 'New unit', new_unit_path %></p>