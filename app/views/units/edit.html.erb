<h2>Editing unit</h2>

<%= form_for(@unit, :validate => true) do |f| %>
  <%= f.error_messages %>
	<p><%= f.text_field :name %></p>
	<p><%= f.text_area :description, :size => "30x3" %></p>
	<div id="members">
		<%= tabled_asm_select(@unit) %>
	</div>
	<p><%= f.submit 'Update' %></p>
<% end %>
<%= link_to 'Show', @unit %> | <%= link_to 'Edit Unit Settings', edit_unit_setting_path(@unit) %>