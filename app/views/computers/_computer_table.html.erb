<div id="computer_table">
	<% if paginate %>
		<p>
			view
			<%= link_to '10', {:name => params[:name], :per_page => 10} %> 
			<%= link_to '20', {:name => params[:name], :per_page => 20} %> 
			<%= link_to '60', {:name => params[:name], :per_page => 60} %> 
			per page
		</p>
		<p>
			<%= record_count(computers) %>
			<div class="batch_actions">
  		  <%= link_to content_tag(:span, "Batch Actions"), "#batch_action_popover", :id => "batch_action_button", :class => "batch_action_dropdown button" %>
  		  <div class="batch_actions_menu">
  		    <div class="batch_actions_list">
            <%= link_to "Edit Selection", "#", { :remote => true, :class => "batch_action", :id => "edit" } %>
            <%= link_to "Delete Selection", "#", { :remote => true, :class => "batch_action", :id => "delete" } %>
          </div>
        </div>
      </div>
		</p>
		<%= will_paginate computers %>
	<% end %>
	<% if computers.length > 0 %>
		<table class="zebra">
			<thead>
				<tr>
					<% if batch_actions %>
						<th><%= check_box_tag("select_all", nil, nil, :class => "select_all") %></th>
					<% end %>
					<th><!-- icon header --></th>
					<th><%= sortable 'name' %></th>
					<th><%= sortable 'hostname' %></th>
					<th><%= sortable 'mac_address', 'MAC Address' %></th>
					<th><%= sortable 'last_report_at', 'Last Report' %></th>
					<th>Actions</th>
				</tr>
			</thead>

			<% computers.each do |c| %>
			  <tr>
				<% if batch_actions %>
					<td><%= check_box_tag("selected_records[]",c.id, false, :class => "batch_action_checkbox") %></td>
				<% end %>
		
				<td><%= image_tag c.icon.url(:small), :class => "thumbnail" if c.icon %></td>
				<td><%= link_to c.name, computer_url(c.unit, c) %></td>    
			    <td><%= link_to c.hostname, computer_url(c.unit, c) %></td>
				<td><%= c.mac_address %></td>
				<td><%= c.last_report_at_time %></td>
			    <td>
					<% if can? :update, c %>
						<%= link_to 'Edit', edit_computer_path(c.unit, c) %> |
					<% end %>
					<% if can? :destroy, c %>
						<%= link_to 'Destroy', computer_path(c.unit, c) , :confirm => "Are you sure you want to destroy #{c.hostname}?", :method => :delete %><br />
					<% end %>
					<%= link_to 'Manifest', computer_path(c.unit, c, :format => :manifest) %> |
					<%= link_to 'Client Prefs', computer_path(c.unit, c, :format => :client_prefs) %>
				</td>
			  </tr>
			<% end %>
		</table>
		<br /><br />
	<% else %>
		<h5>There are no computers here!</h5>
		<% if can? :create, Computer.new_for_can(current_unit) %>
			<p>Why don't you add <%= link_to "one", new_computer_path(current_unit) %> or <%= link_to "a few", import_new_computer_path(current_unit) %>?</p>
		<% end %>
	<% end %>
	<%= will_paginate computers if paginate %>
</div>