<div id="computer_table">
	<% if paginate %>
		<p>
			view
			<%= link_to '10', {:name => params[:name], :per_page => 10} %> 
			<%= link_to '20', {:name => params[:name], :per_page => 20} %> 
			<%= link_to '60', {:name => params[:name], :per_page => 60} %> 
			per page
		</p>
		<p>
			<%= record_count(computers) %> 	<%= submit_tag "Multiple Edit", :id => "bulk_edit" %>
		</p>
		
		<%= will_paginate computers %>
		
	<% end %>
	

	<% if computers.length > 0 %>
		<table>
			<thead>
				<tr>
					<% if bulk_edit %>
						<th><%= check_box_tag("select_all", nil, nil, :class => "select_all") %></th>
					<% end %>
					<th><!-- icon header --></th>
					<th>
						<%= link_to 'Name', {:action => "index", :col => "name", :order => "asc",:gid => params[:gid], :page => params[:page] } %>
					</th>
					<th>
						<%= link_to 'Hostname', {:action => "index", :col => "hostname", :order => "asc",:gid => params[:gid], :page => params[:page] } %>
					</th>
					<th>
						<%= link_to 'MAC Address', {:action => "index", :col => "mac_address", :order => "asc",:gid => params[:gid], :page => params[:page] } %>
					</th>
					<th>Last Report</th>
					<th>Actions</th>
				</tr>
			</thead>

		<% computers.each do |c| %>
		  <tr>
			<% if bulk_edit %>
				<td><%= check_box_tag("selected_records[]",c.id) %></td>
			<% end %>
		
			<td><%= image_tag c.icon.url(:small) if c.icon %>
			<td><%= link_to c.name, c %></td>    
		    <td><%= link_to c.hostname, c %></td>
			<td><%= c.mac_address %></td>
			<td><%= c.time_since_last_report %></td>
		    <td>
				<%= link_to 'Edit', edit_computer_path(c) %> |
				<%= link_to 'Destroy', c, :confirm => "Are you sure you want to destroy #{c.hostname}?", :method => :delete %><br />
				<%= link_to 'Manifest', computer_path(c, :format => :manifest) %> |
				<%= link_to 'Client Prefs', computer_path(c, :format => :client_prefs) %>
			</td>
		  </tr>
		<% end %>
		</table>
			
				<br /><br />
	<% else %>
		<h5>There are no computers here!</h5>
		<p>Why don't you add <%= link_to "one", new_computer_path %> or <%= link_to "a few", import_new_computer_path %>?</p>
	<% end %>
	<%= will_paginate computers if paginate %>
</div>