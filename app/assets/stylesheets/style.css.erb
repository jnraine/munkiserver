.user-principal {
  background-image:url(<%= asset_path 'user.png' %>);
}

.user-group-principal {
  background-image:url(<%= asset_path 'user-group.png' %>);
}

.remove-membership {
  float:right;
}

.list-filter-wrapper {
  padding-bottom:10px;
}

dd.permission-check-box {
  display:inline;
}

.zebra th {
  font-size: 13px;
